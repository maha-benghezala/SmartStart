{% extends('affiche.html.twig') %}
{% block body %}
    <div class="candidate-section content-area">
        <div class="container">
            <div class="row">

                <div class="col-lg-8 col-md-12">
                    {% for f in user %}
                    {% for r in f.Roles %}
                    {% if  r =="ROLE_FREELANCER" %}
                    <!-- job box start -->
                    <div class="job-box-2">
                        <div class="company-logo">
                            <img src="{{asset( f.image) }}" alt="avatar">
                        </div>
                        <div class="description">
                            <h5 class="title"><a href="#">{{ f.prenom}} {{ f.nom }}</a></h5>
                            <div class="candidate-listing-footer">
                                <ul>
                                    <li><i class="flaticon-tick"></i> {{f.poste }}</li>
                                    <li><i class="flaticon-pin"></i> {{ f.adresse }}</li>
                                    <li><ul class="list-inline rating">
                                            {% if p >= 1 and p < 1.5  %}
                                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                            {% endif %}
                                            {% if p >=1.5 and p < 2.5 %}
                                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                            {% endif %}
                                            {% if p>=2.5 and p <3.5 %}
                                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                            {% endif %}
                                            {% if p>=3.5 and p<4.5 %}
                                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                            {% endif %}
                                            {% if p >=4.5%}
                                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                            {% endif %}
                                        </ul></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <hr class="hr-boder clearfix">
                    <!-- about me start -->
                    <div class="about-me mb-40">
                        <h3 class="heading-2">About Me</h3>
                        <p>{{f.description }}</p>
                    </div>
                    <!-- Education start-->

                    <div class="education mb-50">
                        <h3 class="heading-2">Education</h3>
                        <div class="education-box">
                            <div class="icon">
                                <i class="flaticon-mortarboard"></i>
                            </div>
                            {% for f in formation %}
                                <div class="employer-info">
                                    <h5>{{ f.nomecole }}<span> /{{ f.diplome }} </span></h5>
                                    <h6>{{ f.anneediplome }}</h6>
                                    <h6> {{ f.domaine}}</h6>
                                    <p>{{ f.description }}</p>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                    <!-- Work experiance start-->
                    <div class="work-experiance mb-50">
                        <h3 class="heading-2">Experiance</h3>
                        <div class="education-box">
                            {% for exp in experience %}
                            <div class="icon">
                                <i class="flaticon-work"></i>
                            </div>

                            <div class="employer-info">
                                <h5>{{ exp.intituleposte }} <span> / {{ exp.nomentreprise }}</span></h5>
                                <h6>{{ exp.anneedebut }} - {{ exp.anneefin }}</h6>
                                <h6>{{ exp.secteur }}</h6>
                                <p>{{ exp.description }}</p>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                    <!-- Progressbar example start -->
                    <div class="work-experiance  mb-50">
                        <h3 class="heading-2">Certifcation</h3>
                                <div class="education-box">
                                    {% for cert in certification %}
                                    <div class="icon">
                                        <i class="fa fa-certificate"></i>
                                    </div>
                                    <div class="employer-info">
                                        <h5>{{ cert.nomcertif}} <span> / {{cert.organisme }}</span></h5>
                                        <h6>{{ cert.moisdebut }}/{{ cert.anneedebut }} -{{ cert.moisfin }}/{{ cert.anneefin }}</h6>
                                        <h6>{{ cert.url }}</h6>
                                    </div>
                                    {% endfor %}
                                </div>

                    </div>
                    <div class="work-experiance mb-50">

                        <h3 class="heading-2">Competence </h3>

                        {% for comp in competence %}
                            <div class="education-box">
                                <div class="icon">
                                    <i class="fa fa-cogs"></i>
                                </div>
                                <div class="employer-info">
                                    <h5>{{ comp.nomcompetence}}</h5>
                                </div>
                            </div>

                        {% endfor %}
                    </div>
                    <div class="work-experiance mb-50">

                        <h3 class="heading-2">Langue</h3>

                        {% for langue in langue %}
                            <div class="education-box">
                                <div class="icon">
                                    <i class="fa fa-language"></i>
                                </div>
                                <div class="employer-info">
                                    <h5>{{ langue.langue}} / {{ langue.niveau}}</h5>
                                </div>
                            </div>

                        {% endfor %}
                    </div>
                    <!-- Portfolio start -->

                </div>
                {% endif %}
                {% endfor %}
                {% endfor %}
                <div class="col-lg-4 col-md-12">
                    <div class="sidebar-right-2">
                        <div class="widget">
                            <form method="GET">
                                <div class="form-group mb-0">
                                    <button class="search-button button-theme">Download CV </button>
                                </div>
                            </form>
                        </div>
                        <!-- Job overview start -->
                        <div class="job-overview widget">
                            <h3 class="sidebar-title">Job Overview</h3>
                            <div class="s-border"></div>
                            <ul>
                                <li><div class="stars">
                                        <input class="star star-5" id="star-5" type="radio" name="star"/>
                                        <label class="star star-5" for="star-5"></label>
                                        <input class="star star-4" id="star-4" type="radio" name="star"/>
                                        <label class="star star-4" for="star-4"></label>
                                        <input class="star star-3" id="star-3" type="radio" name="star"/>
                                        <label class="star star-3" for="star-3"></label>
                                        <input class="star star-2" id="star-2" type="radio" name="star"/>
                                        <label class="star star-2" for="star-2"></label>
                                        <input class="star star-1" id="star-1" type="radio" name="star"/>
                                        <label class="star star-1" for="star-1"></label>
                                    </div>
                                    <style>
                                        div.stars {
                                            width: 270px;
                                            display: inline-block;
                                        }

                                        input.star { display: none; }

                                        label.star {
                                            float: right;
                                            padding: 10px;
                                            font-size: 36px;
                                            color: #444;
                                            transition: all .2s;
                                        }

                                        input.star:checked ~ label.star:before {
                                            content: '\f005';
                                            color: #FD4;
                                            transition: all .25s;
                                        }

                                        input.star-5:checked ~ label.star:before {
                                            color: #FE7;
                                            text-shadow: 0 0 20px #952;
                                        }

                                        input.star-1:checked ~ label.star:before { color: #F62; }

                                        label.star:hover { transform: rotate(-15deg) scale(1.3); }

                                        label.star:before {
                                            content: '\f006';
                                            font-family: FontAwesome;
                                        }
                                    </style>
                                </li>

                                <li> {{ form_start(form) }}<div class="form-group">
                                        {{ form_widget(form.avis) }}
                                        {{ form_label(form.commantaire) }}
                                        {{ form_widget(form.commantaire) }}
                                        {{ form_widget(form.AjouterAvis) }}
                                    </div>{{ form_end(form) }}</li>

                                <li><i class="flaticon-woman"></i><h5>Gender</h5><span>Any</span></li>
                                <li><i class="flaticon-work"></i><h5>Job Type</h5><span>Full Time</span></li>
                                <li><i class="flaticon-honor"></i><h5>Qualification</h5><span>Mba</span></li>
                                <li><i class="flaticon-notepad"></i><h5>Experience</h5><span>2 to 3 year</span></li>
                            </ul>
                        </div>
                        <div class="clearfix"></div>
                        <!-- Quick contact start -->
                        <div class="widget-5 contact-2 quick-contact">
                            <h3 class="sidebar-title">Quick Contacts</h3>
                            <div class="s-border"></div>
                            {{ form_start(form2) }}
                                <div class="form-group email">
                                    {{ form_widget(form2.email) }}
                                </div>
                                <div class="form-group message">
                                    {{ form_widget(form2.message) }}
                                </div>
                                <div class="send-btn">
                                    {{ form_widget(form2.envoyer) }}
                                </div>
                            {{ form_end(form2) }}
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
{% block js %}
    <script>
        $("#star-2")
            .click(function () {
                $("#review_avis").val(2);
            });
        $("#star-3")
            .click(function () {
                $("#review_avis").val(3);
            });
        $("#star-4")
            .click(function () {
                $("#review_avis").val(4);
            });
        $("#star-5")
            .click(function () {
                $("#review_avis").val(5);
            });
        $("#star-1")
            .click(function () {
                $("#review_avis").val(1);
            })
    </script>
{% endblock %}