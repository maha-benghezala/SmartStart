{% extends('base.html.twig') %}
{% block section %}

    <div class="col-lg-8 col-md-8 col-sm-8">
                <!-- Option bar start -->
                <div class="option-bar d-none d-xl-block d-lg-block d-md-block d-sm-block">
                    <div class="row">
                        <div class="col-lg-6 col-md-7 col-sm-7">
                            <div class="sorting-options2">
                                <span class="sort">Liste des Freelancers</span>

                            </div>
                        </div>
                        <div class="col-lg-6 col-md-5 col-sm-5">
                            <div class="sorting-options">
                                <a href="#" class="change-view-btn active-view-btn"><i class="fa fa-th-list"></i></a>
                                <a href="#" class="change-view-btn"><i class="fa fa-th-large"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Candidate box start -->
                {% for f in user %}
                {% for r in f.Roles %}

                {% if  r =="ROLE_FREELANCER" %}

                <div class="candidate-box">
                    <div class="company-logo">
                        <img src="{{ f.image }}" alt="avatar">
                    </div>
                    <div class="description">
                        <div class="f-left">
                            <h5 class="title"><a href="">{{ f.prenom }} {{ f.nom }}</a></h5>
                            <div class="candidate-listing-footer">
                                <ul>
                                    <li><i class="flaticon-tick"></i> {{ f.poste }}</li>
                                    <li><i class="flaticon-pin"></i> {{ f.adresse }}</li>
                                </ul>
                            </div>
                        </div>
                        <a href="{{ path('Afficher_freelancer',{'id':f.id}) }}" class="apply-button">View Resume</a>
                    </div>
                </div>

                {% endif %}

                {% endfor %}
                {% endfor %}

                <!-- Page navigation start -->

                <div class="navigation text-center" >
                    {{ knp_pagination_render(user) }}
                </div>

            </div>



{% endblock %}