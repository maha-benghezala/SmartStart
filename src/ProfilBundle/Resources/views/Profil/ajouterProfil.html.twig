{% extends('base.html.twig') %}
{% block section %}
    <section class="clearfix signUpSection">
    <div class="container">
        <div class="modal-content">

            {{ form_start(form) }}
            {% for f in user %}

            <div class="modal-body">

                    <div class="dashboard-list">
                        <h3 class="heading">Basic Info</h3>
                        <div class="dashboard-message contact-2 bdr clearfix">
                            <div class="row">
                                <div class="col-lg-3 col-md-3">
                                    <!-- Edit profile photo -->

                                    <div class="edit-profile-photo">
                                        <img src="" alt="profile-photo" class="img-fluid">
                                        {{ form_widget(form.image) }}
                                        <div class="change-photo-btn">
                                            <div class="photoUpload">
                                                <span><i class="fa fa-upload"></i></span>
                                                <input type="file" class="upload">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-9 col-md-9">

                                        <div class="row">
                                            <div class="col-lg-6 col-md-6">
                                                <div class="form-group name">
                                                    {{ form_label(form.nom) }}
                                                    {{ form_widget(form.nom) }}
                                                </div>
                                            </div>
                                            <div class="col-lg-6 col-md-6">
                                                <div class="form-group name">
                                                    {{ form_label(form.prenom) }}
                                                    {{ form_widget(form.prenom) }}
                                                </div>
                                            </div>
                                            <div class="col-lg-6 col-md-6">
                                                <div class="form-group email">
                                                    {{ form_label(form.adresse) }}
                                                    {{ form_widget(form.adresse) }}
                                                </div>
                                            </div>
                                            <div class="col-lg-6 col-md-6">
                                                <div class="form-group subject">
                                                    {{ form_label(form.telephone) }}
                                                    {{ form_widget(form.telephone) }}
                                                </div>
                                            </div>
                                            <div class="col-lg-6 col-md-6">
                                                <div class="form-group number">
                                                    {{ form_label(form.email) }}
                                                    {{ form_widget(form.email) }}
                                                </div>
                                            </div>



                                            <div class="col-lg-6 col-md-6">
                                                <div class="form-group number">
                                                    {{ form_label(form.ville) }}
                                                    {{ form_widget(form.ville) }}
                                                </div>
                                            </div>
                                            <div class="col-lg-6 col-md-6">
                                                <div class="form-group number">
                                                    {{ form_label(form.poste) }}
                                                    {{ form_widget(form.poste) }}
                                                </div>
                                            </div>
                                            <div class="col-lg-12 col-md-12 col-sm-12">
                                                <div class="form-group mb-0 message">
                                                    {{ form_label(form.description) }}
                                                    {{ form_widget(form.description) }}
                                                </div>
                                            </div>
                                        </div>

                                </div>
                            </div>
                        </div>
                    </div>

            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ form_widget(form.Annuler) }}</button>
                <button type="button" class="btn btn-primary fa fa-pencil" href="{{ path('profil',{'id':f.id}) }}">{{ form_widget(form.Enregistrer) }}</button>
            </div>

            {% endfor %}
            {{ form_end(form) }}
        </div>
    </div>
    </section>
{% endblock %}
