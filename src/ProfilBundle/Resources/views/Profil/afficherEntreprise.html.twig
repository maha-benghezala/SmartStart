{% extends('affiche.html.twig') %}
{% block body %}
    <div class="employer-details-page content-area employer-details">
        <div class="container">
            <div class="row">
                {% for f in userr %}
                {% for r in f.Roles %}
                {% if  r =="ROLE_ENTREPRISE" %}
                <div class="col-lg-8 col-md-12">
                    <!-- Employer box 2 start -->

                    <div class="employer-box-2 clearfix">
                        <div class="employer-photo">
                            <img src="{{ asset(f.image) }}" alt="logo">
                        </div>
                        <div class="employer-info align-self-center">
                            <div class="float-left">
                                <h5 class="title"><a href="#">{{ f.nomsc }}</a></h5>
                                <div class="candidate-listing-footer">
                                    <ul>
                                        <li><i class="flaticon-work"></i> {{ f.specialite }}</li>
                                        <li><i class="flaticon-pin"></i> {{ f.adresse }}</li>
                                        <li>
                                            <ul class="list-inline rating">
                                                {% if p >= 1 and p < 1.5  %}
                                                    <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                                {% endif %}
                                                {% if p >=1.5 and p < 2.5 %}
                                                    <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                                    <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                                {% endif %}
                                                {% if p>=2.5 and p <3.5 %}
                                                    <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                                    <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                                    <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                                {% endif %}
                                                {% if p>=3.5 and p<4.5 %}
                                                    <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                                    <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                                    <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                                    <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                                {% endif %}
                                                {% if p >=4.5%}
                                                    <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                                    <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                                    <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                                    <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                                    <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                                {% endif %}
                                            </ul></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr class="hr-boder clearfix">
                    <div class="clearfix"></div>
                    <!-- About start -->
                    <div class="about mb-40">
                        <h3 class="heading-2">About Us</h3>
                        <p>{{ f.description }}</p>
                    </div>
                    <!-- video start -->
                    <div class="video mb-50">


                    </div>
                    <!-- Related jobs start -->
                    <div class="related-Jobs clearfix">




                    </div>
                </div>
                <div class="col-lg-4 col-md-12">
                    <div class="sidebar-right-2">

                        <!-- Information start -->
                        <div class="job-overview information widget">
                            <h3 class="sidebar-title">Information</h3>
                            <div class="s-border"></div>
                            <ul>
                                <li><div class="stars">
                                        <input class="star star-5" id="star-5" type="radio" name="star"/>
                                        <label class="star star-5" for="star-5"></label>
                                        <input class="star star-4" id="star-4" type="radio" name="star"/>
                                        <label class="star star-4" for="star-4"></label>
                                        <input class="star star-3" id="star-3" type="radio" name="star"/>
                                        <label class="star star-3" for="star-3"></label>
                                        <input class="star star-2" id="star-2" type="radio" name="star"/>
                                        <label class="star star-2" for="star-2"></label>
                                        <input class="star star-1" id="star-1" type="radio" name="star"/>
                                        <label class="star star-1" for="star-1"></label>
                                    </div>
                                    <style>
                                        div.stars {
                                            width: 270px;
                                            display: inline-block;
                                        }

                                        input.star { display: none; }

                                        label.star {
                                            float: right;
                                            padding: 10px;
                                            font-size: 36px;
                                            color: #444;
                                            transition: all .2s;
                                        }

                                        input.star:checked ~ label.star:before {
                                            content: '\f005';
                                            color: #FD4;
                                            transition: all .25s;
                                        }

                                        input.star-5:checked ~ label.star:before {
                                            color: #FE7;
                                            text-shadow: 0 0 20px #952;
                                        }

                                        input.star-1:checked ~ label.star:before { color: #F62; }

                                        label.star:hover { transform: rotate(-15deg) scale(1.3); }

                                        label.star:before {
                                            content: '\f006';
                                            font-family: FontAwesome;
                                        }
                                    </style>
                        </li>

                                <li> {{ form_start(form) }}<div class="form-group">
                                        {{ form_widget(form.avis) }}
                                        {{ form_label(form.commantaire) }}
                                        {{ form_widget(form.commantaire) }}
                                        {{ form_widget(form.AjouterAvis) }}
                                    </div>{{ form_end(form) }}</li>


                                <li><i class="flaticon-pin"></i><h5>Locations</h5><span>{{ f.adresse }}</span></li>
                                <li><i class="flaticon-user"></i><h5>Followers</h5><span>14</span></li>
                                <li><i class="flaticon-x"></i><h5>Categories</h5><span>Arts, Design, Media</span></li>
                            </ul>
                        </div>
                        <div class="clearfix"></div>
                        <!-- Quick contacts start -->
                        <div class="widget-5 contact-2 quick-contact">
                            <h3 class="sidebar-title">Quick Contacts</h3>
                            <div class="s-border"></div>
                            {{ form_start(form2) }}
                            <div class="form-group email">
                                {{ form_widget(form2.email) }}
                            </div>
                            <div class="form-group message">
                                {{ form_widget(form2.message) }}
                            </div>
                            <div class="send-btn">
                                {{ form_widget(form2.envoyer) }}
                            </div>
                            {{ form_end(form2) }}
                        </div>
                    </div>
                </div>
                {% endif %}
                {% endfor %}
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
{% block js %}
    <script>
        $("#star-2")
            .click(function () {
                $("#review_avis").val(2);
            });
        $("#star-3")
            .click(function () {
                $("#review_avis").val(3);
            });
        $("#star-4")
            .click(function () {
                $("#review_avis").val(4);
            });
        $("#star-5")
            .click(function () {
                $("#review_avis").val(5);
            });
        $("#star-1")
            .click(function () {
                $("#review_avis").val(1);
            })
    </script>
{% endblock %}